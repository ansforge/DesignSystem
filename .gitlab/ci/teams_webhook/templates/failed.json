{
  "@type": "MessageCard",
  "@context": "https://schema.org/extensions",
  "themeColor": "{{color}}",
  "summary": "Deploy failed",
  "sections": [
    {
      "activityTitle": "{{activityTitle}}",
      "activitySubtitle": "{{activitySubtitle}}",
      "activityImage": "{{activityImage}}",
      "activityText": "<strong style=\"color:red;\">/!\\ Alerte /!\\ </strong>",
      "text": "![Broken](https://media4.giphy.com/media/gg9ciGLbkPuBrYrMEN/giphy.gif?cid=790b76111e5d57bf9d7372ffc47a4ca895088f8bc7b06127&rid=giphy.gif&ct=g)",
      "facts": [
        {
          "name": "Environnement",
          "value": "{{env}}"
        },
        {
          "name": "Durée",
          "value": "{{duration}}"
        },
        {
          "name": "Etat",
          "value": "{{state}}"
        }
      ],
      "markdown": true,
      "potentialAction": [
        {
          "@type": "OpenUri",
          "name": "Détails du job",
          "targets": [
            {
              "os": "default",
              "uri": "{{job_url}}"
            }
          ]
        }
      ]
    }
  ]
}
