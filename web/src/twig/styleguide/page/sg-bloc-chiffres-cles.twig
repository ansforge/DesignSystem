{% extends "../../_layout-styleguide.twig" %}

{% set title = 'Chiffres clés' %}

{% block styles_more %}
    {{ parent() }}
    <link rel="stylesheet" href="./style/bloc-global.css" type="text/css" />
    <link rel="stylesheet" href="./style/bloc-m-card.css" type="text/css" />
    <link rel="stylesheet" href="./style/bloc-m-key-figure.css" type="text/css" />
{% endblock %}
{% block scripts_more %}
    {{ parent() }}
    <script type="text/javascript" src="./script/bloc-m-key-figure.js"></script>
{% endblock %}

{% block main %}

    <div class="sg-container-content">
        {% include "../../styleguide/component/3-organism/o-sg-block-title.twig" with {
            blockSubTitle: "Blocs",
            blockTitle: title
        } %}

        <div class="sg-block-space">
            {% embed "../component/3-organism/o-sg-prism.twig" with { prismLarge: true } %}
                {% block embedToInclude %}
                    {% include "../../site/blocs/3-organism/o-paragraph--key-figures.twig" with {
                        paragKeyfiguresTitle: title,
                        paragColumnsby3: true,
                        cards: [
                            {
                                keyfigureBeforeNumber: "+",
                                keyfigureNumber: 19,
                                keyfigureAfterNumber: "millions",
                                keyfigureDesc: "de téléconsultations prises en charge par l'Assurance Maladie en 2020",
                            },
                            {
                                keyfigureBeforeNumber: "+",
                                keyfigureNumber: 370000,
                                keyfigureDesc: "boîtes aux lettres de messagerie sécurisée en 2021",
                            },
                            {
                                keyfigureBeforeNumber: "+",
                                keyfigureNumber: 350000,
                                keyfigureDesc: "applications de santé en 2021",
                            },
                            {
                                keyfigureNumber: 120,
                                keyfigureAfterNumber: "millions",
                                keyfigureDesc: "lorem ipsum dolor sit amet consectetur adipisicing elit",
                            },
                            {
                                keyfigureNumber: 6000,
                                keyfigureDesc: "dolor sit amet consectetur adipisicing elit",
                            }
                        ],
                    } %}
                {% endblock %}
            {% endembed %}
        </div>

        <div class="sg-block-space wysiwyg">
            <h2>Mise en place</h2>
            <p>Charger les CSS suivantes :</p>
            <ul>
                <li>CSS du Système de Design</li>
                <li><a href="./style/bloc-global.css" target="_blank" class="file-link">CSS globale pour les blocs (1,9Ko - CSS)</a></li>
                <li><a href="./style/bloc-m-card.css" target="_blank" class="file-link">CSS de la carte Card (3,4Ko - CSS)</a></li>
                <li><a href="./style/bloc-m-key-figure.css" target="_blank" class="file-link">CSS de la carte Chiffre clé (0,15Ko - CSS)</a></li>
            </ul>
            <p>Charger les JS suivants :</p>
            <ul>
                <li>JS du Système de Design</li>
                <li><a href="./script/bloc-m-key-figure.js" target="_blank" class="file-link">JS de la carte Chiffre clé (0,71Ko - JS)</a></li>
            </ul>
        </div>
    </div>

{% endblock %}